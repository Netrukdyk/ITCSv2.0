<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main$DummySectionFragment" >

    <Button
        android:id="@+id/button_trains"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/train_control"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_trains"
        android:scrollbars="horizontal" >

        <GridLayout
            android:id="@+id/GridLayout01"
            android:layout_width="292dp"
            android:layout_height="130dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:orientation="vertical"
            android:rowCount="5" >

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:text="@string/toggle"
                android:textOff="O1: 2|3 kelias"
                android:textOn="O1: 1 kelias" />

            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="130dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:text="@string/toggle"
                android:textOff="I1: 2|3 kelias"
                android:textOn="I1: 1kelias" />

            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="130dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:text="@string/toggle"
                android:textOff="O2: 2 kelias"
                android:textOn="O2: 3 kelias" />

            <Space />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="130dp"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:text="@string/toggle"
                android:textOff="I2: 2 kelias"
                android:textOn="I2: 3 kelias" />

            <ToggleButton
                android:id="@+id/toggleButton5"
                android:layout_width="130dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_row="2"
                android:text="@string/toggle"
                android:textOff="2 Stotis"
                android:textOn="Kranas" />

            <ToggleButton
                android:id="@+id/toggleButton6"
                android:layout_width="130dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:layout_row="2"
                android:text="@string/toggle" />

            <Space />

            <ToggleButton
                android:id="@+id/toggleButton7"
                android:layout_width="130dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_row="3"
                android:text="@string/toggle"
                android:textOff="Tunelis"
                android:textOn="Į terminalą" />

            <ToggleButton
                android:id="@+id/toggleButton8"
                android:layout_width="130dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:layout_row="3"
                android:text="@string/toggle" />

            <ToggleButton
                android:id="@+id/toggleButton9"
                android:layout_width="130dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:layout_row="4"
                android:text="@string/toggle"
                android:textOff="| |"
                android:textOn="X" />
        </GridLayout>
    </ScrollView>

</RelativeLayout>